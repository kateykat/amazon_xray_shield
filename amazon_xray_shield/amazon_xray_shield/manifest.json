{
  "manifest_version": 3,
  "name": "Amazon XRay Shield",
  "version": "1.24",

  "description": "Removes the X-Ray node from Amazon while watching videos",

  "icons": {
    "48": "icons/xray-48.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.co.uk/*",
        "*://*.amazon.co.jp/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.com.au/*",
        "*://*.amazon.de/*",
        "*://*.amazon.fr/*",
        "*://*.amazon.it/*",
        "*://*.amazon.es/*",
        "*://*.amazon.in/*",
        "*://*.amazon.com.mx/*",
        "*://*.amazon.com.br/*",
        "*://*.amazon.cn/*",
        "*://*.primevideo.com/*"
      ],
      "js": ["xrayshield.js"]
    }
  ]
}
